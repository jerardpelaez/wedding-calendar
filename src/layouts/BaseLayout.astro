---
import '../assets/styles/base.css'
import ToastProvider from '@/components/vue/layout/ToastProvider.vue'

interface Props {
  title: string
  description?: string
}

const { title, description = 'Shared wedding calendar for Jerard & Joana â€” 2026' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#FDF9F6" />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
    <title>{title}</title>
  </head>
  <body class="min-h-dvh bg-background text-foreground font-body">
    <slot />
    <ToastProvider client:load />
  </body>
</html>
